{
  "name": "retro-dos-framework",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "example:basic": "npm run example:basic -w @retro-dos/foxpro-ui",
    "example:coordination": "npm run example:coordination -w @retro-dos/event-coordinator",
    "example:raw-buffer": "npm run example:raw-buffer -w @retro-dos/video-buffer",
    "example:input": "npm run example:input -w @retro-dos/input-services",
    "example:space-shooter": "npm run example:space-shooter -w @retro-dos/event-coordinator"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "gif.js": "^0.2.0"
  }
}
